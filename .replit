modules = ["flutter", "flutter-3.16.10", "postgresql-16", "dart", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter PostgreSQL Monitor"

[[workflows.workflow]]
name = "Flutter PostgreSQL Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start-server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "node start-server.js"]

[[ports]]
localPort = 3001

[[ports]]
localPort = 4000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001

[[ports]]
localPort = 5500
externalPort = 80
